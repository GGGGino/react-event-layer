{
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testEnvironment": "jsdom",
  "coverageThreshold": {
    "global": {
      "branches": 65,
      "functions": 70,
      "lines": 70
    }
  }
}
